  <div id="replyForm">
    <!-- <label>성명 : </label>
    <input type="text" name="name"><br>
    <label>내용 : </label> -->
    <textarea name="replyContent" id="replyContent" style="width: 90%;"></textarea><br>
    <button type="button" id="btnRegReply" onclick="regReply('<%= newsContent.nid %>')">등록완료</button>
  </div>
  <div id="replyTable">
  <ul id="replyUl">
    
  </ul>
