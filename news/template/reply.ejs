        data.forEach(v=>{
          document.querySelector('#replyUl').insertAdjacentHTML('beforeend',`
          <li>${v.replyContent}</li>
          `)
        })
      alert(JSON.stringify(data)) */
    .catch(console.error)
  }

</script>
</html>